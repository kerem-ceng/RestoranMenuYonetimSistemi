@model IEnumerable<RestaurantMenuManager.Models.Category>

<div class="container mt-5">
    <h2 class="text-white mb-4">📂 Kategoriler</h2>

    <a asp-action="Create" class="btn btn-success mb-3">➕ Yeni Kategori Ekle</a>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card category-card p-3">

                    <h5>@item.Name</h5>

                    <div class="mt-3">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">✏️ Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">🗑️ Sil</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
